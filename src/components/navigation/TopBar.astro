---
// This is the original TopBar.astro file, modified to remove branding and navigation.
import DarkModeSwitch from "./DarkModeSwitch.astro";
---

<header>
  <div class="topArea bg-sky-50 dark:bg-zinc-900">
    <div class="topButtonArea flex items-center justify-end">
      <!-- The Discretize logo link and mobile nav button have been removed. -->
      <!-- We are keeping only the DarkModeSwitch. -->
      <div class="mr-4">
        <DarkModeSwitch />
      </div>
    </div>
  </div>

  <!-- The NavBarMobile and NavBarDesktop components have been removed. -->
</header>

<style>
  /* Global styles for nav buttons are no longer needed. */

  .topButtonArea {
    max-height: 4rem;
    padding: 2rem 0rem;
    max-width: 1000px;
    margin: 0 auto;
  }
  @media (max-width: 1400px) {
    .topButtonArea {
      padding: 2rem 1rem;
    }
  }
</style>

