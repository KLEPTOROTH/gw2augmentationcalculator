---
interface Props {
    width: number;
    height: number;
    color?: string;
}

const { width, height, color = "stroke-blue-500" } = Astro.props;
---

<svg
    class={`absolute z-10 top-0 left-0 ${color}`}
    viewBox=`0 0 ${width} ${height}`
>
    <slot />
</svg>

<style>
    :global(#animated-path) {
        stroke-dasharray: 5;
        animation: dash 10s linear;
        animation-iteration-count: infinite;
        animation-direction: reverse;
    }

    @keyframes dash {
        to {
            stroke-dashoffset: 100;
        }
    }
</style>
